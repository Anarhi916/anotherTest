<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Dialog id="idDialogCreateProduct" title="{i18n>TitleDialogCreateProduct}">
		<f:SimpleForm maxContainerCols="1" layout="ResponsiveGridLayout" labelSpanL="12" labelSpanM="12" emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1">
			<f:content>
				<Label text="{i18n>AtributsName}"/>
				<Input placeholder="{i18n>PlaceholderEnterName}" valueLiveUpdate="true" value="{
					path: 'Name',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 3
					}
				}"/>
				<Label text="{i18n>AtributsPrice}"/>
				<Input placeholder="{i18n>PlaceholderEnterPrice}" valueLiveUpdate="true" description="USD" fieldWidth="85%" value="{
					path: 'Price',
					type: 'sap.ui.model.type.Integer',
					constraints: {
						minLength: 1
					}
				}"/>
				<Label text="{i18n>AtributsSpecs}"/>
				<Input placeholder="{i18n>PlaceholderEnterSpecs}" valueLiveUpdate="true" value="{
					path: 'Specs',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}"/>
				<Label text="{i18n>AtributsRating}"/>
				<Input placeholder="{i18n>PlaceholderEnterRating}" valueLiveUpdate="true" value="{
					path: 'Rating',
					type: 'sap.ui.model.type.Integer',
					constraints: {
						minLength: 1,
						minimum: 1,
						maximum: 5
					}
				}"/>
				<Label text="{i18n>AtributsSupplierinfo}"/>
				<Input placeholder="{i18n>PlaceholderEnterSupplierinfo}" valueLiveUpdate="true" value="{
					path: 'SupplierInfo',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}"/>
				<Label text="{i18n>AtributsOrigin}"/>
				<Input placeholder="{i18n>PlaceholderEnterOrigin}" valueLiveUpdate="true" value="{
					path: 'MadeIn',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 2
					}
				}"/>
				<Label text="{i18n>AtributsProdCompanyu}"/>
				<Input placeholder="{i18n>PlaceholderEnterProdCompany}" valueLiveUpdate="true" value="{
					path: 'ProductionCompanyName',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 2
					}
				}"/>
				<Label text="{i18n>AtributsStatus}"/>
				<Select width="100%" id="idSelectStatus" selectedKey="{Status}">
					<core:Item key="OK" text="{i18n>FilterOK}" />
					<core:Item key="STORAGE" text="{i18n>FilterStorage}" />
					<core:Item key="OUT_OF_STOCK" text="{i18n>FilterOutOfStock}" />
				</Select>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="{i18n>ButtonCreate}" type="Emphasized" press="onCreateProductPress" />
			<Button text="{i18n>ButtonCancel}" press="onCancelPress" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>