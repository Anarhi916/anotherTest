<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Dialog id="idDialogCreateProduct" title="{StoresDeteils>/titleDialog}">
		<f:SimpleForm maxContainerCols="1" layout="ResponsiveGridLayout" labelSpanL="12" labelSpanM="12" emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1" id="idFormCreateOrEditProduct">
			<f:content>
				<Label text="{i18n>AtributsName}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterName}" valueLiveUpdate="true" value="{
					path: 'Name',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 3
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterName}" valueLiveUpdate="true" value="{
					path: 'odata>Name',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 3
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsPrice}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterPrice}" valueLiveUpdate="true" description="USD" fieldWidth="85%" value="{
					path: 'Price',
					type: 'sap.ui.model.type.Integer',
					constraints: {
						minLength: 1
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterPrice}" valueLiveUpdate="true" description="USD" fieldWidth="85%" value="{
					path: 'odata>Price',
					type: 'sap.ui.model.type.Integer',
					constraints: {
						minLength: 1
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsSpecs}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterSpecs}" valueLiveUpdate="true" value="{
					path: 'Specs',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterSpecs}" valueLiveUpdate="true" value="{
					path: 'odata>Specs',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsRating}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterRating}" valueLiveUpdate="true" value="{
					path: 'Rating',
					type: 'sap.ui.model.type.Integer',
					constraints: {
						minLength: 1,
						minimum: 1,
						maximum: 5
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterRating}" valueLiveUpdate="true" value="{
					path: 'odata>Rating',
					type: 'sap.ui.model.type.Integer',
					constraints: {
						minLength: 1,
						minimum: 1,
						maximum: 5
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsSupplierinfo}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterSupplierinfo}" valueLiveUpdate="true" value="{
					path: 'SupplierInfo',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterSupplierinfo}" valueLiveUpdate="true" value="{
					path: 'odata>SupplierInfo',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsOrigin}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterOrigin}" valueLiveUpdate="true" value="{
					path: 'MadeIn',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 2
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterOrigin}" valueLiveUpdate="true" value="{
					path: 'odata>MadeIn',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 2
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsProdCompanyu}" required="true"/>

				<Input placeholder="{i18n>PlaceholderEnterProdCompany}" valueLiveUpdate="true" value="{
					path: 'ProductionCompanyName',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 2
					}
				}" visible="{= !${StoresDeteils>/edit} }"/>
				<Input placeholder="{i18n>PlaceholderEnterProdCompany}" valueLiveUpdate="true" value="{
					path: 'odata>ProductionCompanyName',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 5
					}
				}" visible="{= ${StoresDeteils>/edit} }"/>

				<Label text="{i18n>AtributsStatus}" required="true"/>

				<Select width="100%" id="idSelectStatus" selectedKey="{Status}" visible="{= !${StoresDeteils>/edit} }">
					<core:Item key="OK" text="{i18n>FilterOK}" />
					<core:Item key="STORAGE" text="{i18n>FilterStorage}" />
					<core:Item key="OUT_OF_STOCK" text="{i18n>FilterOutOfStock}" />
				</Select>
				<Select visible="{= ${StoresDeteils>/edit} }" width="100%" id="idSelectStatusEditable" selectedKey="{odata>Status}">
					<core:Item key="OK" text="{i18n>FilterOK}" />
					<core:Item key="STORAGE" text="{i18n>FilterStorage}" />
					<core:Item key="OUT_OF_STOCK" text="{i18n>FilterOutOfStock}" />
				</Select>

			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="{i18n>ButtonCreate}" type="Emphasized" press="onCreateProductPress" visible="{= !${StoresDeteils>/edit} }"/>
			<Button text="{i18n>ButtonEdit}" type="Emphasized" press="onEditProductPress" visible="{= ${StoresDeteils>/edit} }"/>
			<Button text="{i18n>ButtonCancel}" press="onCancelPress" visible="{= !${StoresDeteils>/edit} }"/>
			<Button text="{i18n>ButtonCancel}" press="onCancelFromEditPress" visible="{= ${StoresDeteils>/edit} }"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>